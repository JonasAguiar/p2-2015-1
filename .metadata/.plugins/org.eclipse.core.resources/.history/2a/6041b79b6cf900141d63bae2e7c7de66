package aulaHeranca;

import semheranca.Funcionario.Linguagem;


public class Programador extends Funcionario {
	
	private Linguagem linguagem;

	public Programador(String nome, Linguagem linguagem) throws Exception {
		super(nome);
		this.linguagem = linguagem;
		
	}
	
	public Linguagem getLinguagem() {
		return linguagem;
	}
	
	@Override
	public double calculaSalario() {
		if (linguagem.equals(Linguagem.Java)) {
			return salarioBaseProgramador * 1.5;
		} else {
			return salarioBaseProgramador * 1;
		}
	}

	enum Linguagem {
		Java, Python
	}
}
