import java.util.Scanner;

public class Programa {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Digite o seu nome: ");
		String primeiroNome = scanner.next();
		System.out.println("Digite sua idade: ");
		int primeiraIdade = scanner.nextInt();
		
		System.out.println("Digite o seu nome: ");
		String segundoNome = scanner.next();
		System.out.println("Digite sua idade: ");
		int segundaIdade = scanner.nextInt();
		
		System.out.println("Digite o seu nome: ");
		String terceiroNome = scanner.next();
		System.out.println("Digite sua idade: ");
		int terceiraIdade = scanner.nextInt();
		
		if (primeiraIdade > segundaIdade) {
			if (primeiraIdade > terceiraIdade) {
				System.out.println("A pessoa mais velha é: " + primeiroNome + " com " + primeiraIdade + " anos");	
			} else {
				System.out.println("A pessoa mais velha é: " + terceiroNome + " com " + terceiraIdade + " anos");
			}
		} else if (segundaIdade > terceiraIdade) {
			System.out.println("A pessoa mais velha é: " + segundoNome + " com " + segundaIdade + " anos");
		} else {
			System.out.println("A pessoa mais velha é: " + terceiroNome + " com " + terceiraIdade + " anos");
		}
	}
	
}
