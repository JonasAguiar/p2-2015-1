package aula4;

import java.util.Arrays;

public class Supermercado {
	
	private Produto[] produtos;
	private int indexProdutoAtual; 
	
	public Supermercado() {
		produtos = new Produto[2];
	}
	
	public void adicionaProduto(Produto produto) {
		if (arrayEstaCheio()) {
			dobraArray();
		}
		produtos[indexProdutoAtual] = produto;
		indexProdutoAtual++;
	}

	private void dobraArray() {
		Produto[] novoArray = new Produto[this.produtos.length*2];
		System.arraycopy(this.produtos, 0, novoArray, 0, this.produtos.length);
		produtos = novoArray;
	}

	private boolean arrayEstaCheio() {
		return indexProdutoAtual == produtos.length - 1;
	}

}
