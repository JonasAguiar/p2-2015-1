package aulaHeranca;

import static org.junit.Assert.*;

import java.util.HashSet;

import org.junit.Test;

public class FuncionarioTest {

	@Test
	public void testConstrutor() throws Exception {
		Funcionario programador = new Funcionario("Matteus","Programador","Java");
		assertEquals("Matteus", programador.getNome());
		assertEquals("Programador", programador.getCargo());
		assertEquals("Java",programador.getLinguagem());
	}
	
	@Test(expected = Exception.class)
	public void testConstrutorInvalido() throws Exception {
		Funcionario programador = new Funcionario("","Programador","Java");
	}
	
	@Test
	public void testGerente() {
		int numeroDeProjetos = 2;
		Funcionario gerente = new Funcionario("Bianca","Gerente",numeroDeProjetos);
		assertEquals("Bianca", gerente.getNome());
		assertEquals("Gerente", gerente.getCargo());
		assertEquals(2, gerente.getNumeroDeProjetos());
		
		assertEquals(9000.6, gerente.calculaSalario(),0.5);
	}
	
	
	
	
	
	
	
	
	
	
	
	

	
}
