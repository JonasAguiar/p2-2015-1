package aula4;

public class Produto {
	
	public static int totalDeProdutosCriados;
	
	private String nome;
	private double preco;
	private int quantidade;
	private String tipo;

	public Produto(String nome, double preco, int quantidade, String tipo) {
		this.nome = nome;
		this.preco = preco;
		this.quantidade = quantidade;
		this.tipo = tipo;
		totalDeProdutosCriados++;
	}
}
