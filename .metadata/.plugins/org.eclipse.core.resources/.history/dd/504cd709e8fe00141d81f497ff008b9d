package ui;

import java.util.Scanner;

public class TelaGerenciadorDeTarefas {
	
	private static final int SAIR = 3;
	private static final int LOGIN = 1;
	private static final int CADASTRAR_USUARIO = 2;

	public void exibeMenuPrincipal() {
		Scanner sc = new Scanner(System.in);
		int opcao;
		do {
			System.out.println("Bem vindo. Selecione uma opção:");
			System.out.println("1. Fazer login");
			System.out.println("2. Cadastrar usuário");
			System.out.println("3. Sair");
			opcao = sc.nextInt();
			switch (opcao) {
			case LOGIN:
					exibeTelaDeLogin(sc);
				break;
			case CADASTRAR_USUARIO:
				exibeTelaDeCadastroDoUsuario();
			break;
			default:
				break;
			}
		} while (opcao != SAIR);
	}
	
	public void exibeMenuDoUsuario() {
		
	}
	
	public void exibeTelaDeCadastroDoUsuario() {
		
	}
	
	public void exibeTelaDeCadastroDeTarefas() {
		
	}
	
	public void exibeTarefas() {
		
	}
	
	public void exibeTelaDeLogin(Scanner sc) {
		
	}

}
